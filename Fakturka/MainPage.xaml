            </PivotItem>
            <PivotItem>
                <PivotItem.Header>
                    <local:TabHeader_TextBlock Text="Kontrahenci" Font="/Fonts/fontello.ttf#fontello" Icon="&#xE80F;"/>
                </PivotItem.Header>
                <PivotItem VerticalAlignment="Stretch" Margin="0,0,0,0">
                    <view:MainProviders x:Name="MainProviders"/>
                </PivotItem>
            </PivotItem>
